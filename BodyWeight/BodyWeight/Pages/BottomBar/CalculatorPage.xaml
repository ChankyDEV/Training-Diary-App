<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             xmlns:controls="clr-namespace:BodyWeight.Helpers"
             xmlns:triggers="clr-namespace:BodyWeight.Triggers"
             x:Class="BodyWeight.Pages.CalculatorPage">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical">
            <!--Header-->
            <StackLayout VerticalOptions="Start">
                <ContentView>
                    <Grid BackgroundColor="Indigo" HorizontalOptions="FillAndExpand" VerticalOptions="StartAndExpand" Padding="{Binding HeaderPadding}" >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="auto"/>
                        </Grid.ColumnDefinitions>
                        <StackLayout Grid.Column="0">
                            <Label Text="Hello" TextColor="#FFC21C" FontSize="Medium" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" FontAttributes="Bold"/>
                            <Label Text="bro" TextColor="WhiteSmoke" FontSize="Small" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" FontAttributes="Bold"/>
                        </StackLayout>
                        <ImageButton
                            BackgroundColor="Indigo"
                            Grid.Column="1"
                            Source="moreGold"
                           
                            />
                    </Grid>
                </ContentView>
            </StackLayout>
         
                <Frame Grid.Column="0" CornerRadius="5" Padding="0" HorizontalOptions="Center" HasShadow="True"  WidthRequest="250" HeightRequest="50">
                <Grid Padding="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="auto"/>
                    </Grid.ColumnDefinitions>

                    <Image BackgroundColor="Transparent" Source="fitness" WidthRequest="20" HorizontalOptions="Center" VerticalOptions="Center" Grid.Column="0"  />
                    <controls:MyEntry Grid.Column="1" Placeholder="Weight" VerticalOptions="Center" Keyboard="Numeric" VerticalTextAlignment="Center"/>
                
                </Grid>
            </Frame>


            <!--Segmented control-->
            <Grid HorizontalOptions="Center" >
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                </Grid.ColumnDefinitions>

                <Frame x:Name="SegmentedFrameBackground" Grid.Row="0" Grid.Column="0" BackgroundColor="WhiteSmoke" HasShadow="True" HorizontalOptions="FillAndExpand" CornerRadius="30" Padding="0" >
                    <Frame BackgroundColor="Indigo" CornerRadius="30" HorizontalOptions="Start" 
                           WidthRequest="20" x:Name="SegmentedFrame"                           
                           TranslationX="{Binding SegmentedControlTranslation}" >
                    </Frame>
                </Frame>
                <Grid BackgroundColor="Transparent">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0" 
                           TextColor="#FFC21C"
                           x:Name="MaleText"
                           FontAttributes="Bold"
                           Text="Male" HorizontalOptions="Center" VerticalOptions="Center" 
                           Padding="5" >
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="SegmentedFrame_Tapped" Command="{Binding SexChangeCommand}"/>
                        </Label.GestureRecognizers>
                    </Label>
                    <Label Grid.Column="1" Text="Female" x:Name="FemaleText" FontAttributes="Bold" HorizontalOptions="Center" VerticalOptions="Center" Padding="5" >
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="SegmentedFrame_Tapped" Command="{Binding SexChangeCommand}"/>
                        </Label.GestureRecognizers>
                    </Label>
                </Grid>
            </Grid>


            <Label Text="{Binding CaloriesText}" HorizontalTextAlignment="Center" TextColor="Black" FontAttributes="Bold" FontSize="Title"/>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>